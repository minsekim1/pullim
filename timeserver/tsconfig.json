{    
  "compilerOptions": {        
      "module": "commonjs",
      "esModuleInterop": true,        
      "target": "es6",
      "lib": ["ES2021.String"],
      "noImplicitAny": true,        
      "moduleResolution": "node",        
      "sourceMap": true,
      "outDir": "dist",        
      "baseUrl": ".",        
      "paths": {
          "*": [
              "node_modules/*",
              "src/types/*"            
          ]
      }  
  },
  "include": [ "src/**/*" ]
}